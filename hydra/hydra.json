{
    "key": "hydra",
    "label": "Hydra",
    "description": "Open-source institutional repository platform",
    "logo": "https://nationaldataservice.atlassian.net/wiki/download/attachments/20611076/hydra-logo.png",
    "image": {
        "name": "ndslabs/hydra",
        "tags": [
            "latest"
        ]
    },
    "depends": [
        {
            "key": "solr6",
            "required": true
        },
        {
            "key": "fedoracommons",
            "required": true
        }
    ],
    "display": "stack",
    "access": "external",
    "config": [
        {
            "name": "CORE_NAME",
            "useFrom" : "solr6.CORE_NAME",
            "canOverride": false
        },
        {
            "name": "CONFIG_REPO",
            "label" : "Solr Config Repo",
            "value" : "https://github.com/nds-org/ndslabs-hydra/trunk/solr/conf",
            "setTo" : "solr6.CONFIG_REPO",
            "isPassword" : false,
            "canOverride": true
        }
    ],
    "ports": [
        {
            "port": 3000,
            "protocol": "http"
        }
    ],
    "readinessProbe": {
        "type": "http",
        "path": "/",
        "port": 3000,
        "initialDelay": 15,
        "timeout": 45
    },
    "resourceLimits": {
        "cpuMax": 500,
        "cpuDefault": 100,
        "memMax": 500,
        "memDefault": 50
    },
    "tags": [
        "16",
        "11"
    ],
    "info": "https://nationaldataservice.atlassian.net/wiki/display/NDSC/Hydra"
}
