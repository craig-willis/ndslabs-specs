    "config":  [
        {
            "name": "SMTP_HOST",
            "value": "smtp.ncsa.illinois.edu",
            "canOverride": true
        },
        {
            "name": "ELASTICSEARCH_CLUSTERNAME",
            "value": "clowder",
            "canOverride": false
        },
        {
            "name": "RABBITMQ_EXCHANGE",
            "value": "clowder",
            "canOverride": false
        },
        {
            "name": "TOOLMANAGER_URI",
            "value": "http://localhost:8082",
            "label": "ToolServer address",
            "canOverride": true
        }
    ],
    "ports": [
        {
            "port": 9000,
            "protocol": "http"
        }
    ],
    "resourceLimits": {
        "cpuMax": 200,
        "cpuDefault": 100,
        "memMax": 1000,
        "memDefault": 250
    },
    "readinessProbe" : {
        "type" : "http",
        "path" : "/assets/stylesheets/main.css",
        "port" : 9000,
        "initialDelay": 10,
        "timeout" : 60
    },
    "repositories": [
      {
        "url": "https://opensource.ncsa.illinois.edu/bitbucket/scm/cats/clowder.git",
        "type": "git"
      }
    ],    
